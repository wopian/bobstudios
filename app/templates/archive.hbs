{{>head}}

<main class='archive'>
    <div class="card-deck">
        {{#each this}}
            <div class="card">
                <div class="card-block">
                    <h4 class="card-title">{{title}}</h4>
                    <small>
                        {{author}}
                        {{#each tags}}
                            {{this}}
                        {{/each}}
                    </small>
                    <p class="card-text">{{body}}</p>
                    <p class="card-text">
                        <small class="text-muted">Published {{date}}</small>
                    </p>
                </div>
            </div>
        {{/each}}
    </div>
</main>

{{>footer}}